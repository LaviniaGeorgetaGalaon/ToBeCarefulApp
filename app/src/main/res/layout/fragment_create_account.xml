<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/ic_wavey_fingerprint__1_"
    tools:context=".fragments.CreateAccountFragment">

    <TextView
        android:layout_width="301dp"
        android:layout_height="90dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="69dp"
        android:layout_marginLeft="69dp"
        android:layout_marginTop="123dp"
        android:layout_marginEnd="41dp"
        android:layout_marginRight="41dp"
        android:fontFamily="@font/comfortaa"
        android:rotationY="0"
        android:text="Creați cont"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textColorHighlight="#F4EFEF"
        android:textSize="45sp"
        android:textStyle="bold" />
    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <EditText
            android:id="@+id/nameET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/text_box"
            android:fontFamily="@font/changa"
            android:hint="Nume întreg"
            android:padding="12dp" />

        <EditText
            android:id="@+id/emailET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/text_box"
            android:fontFamily="@font/changa"
            android:hint="Email"
            android:padding="12dp" />

        <EditText
            android:id="@+id/parolaET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/text_box"
            android:fontFamily="@font/changa"
            android:hint="Parolă"
            android:padding="12dp" />

        <EditText
            android:id="@+id/cornfirmaParolaET"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:background="@drawable/text_box"
            android:fontFamily="@font/changa"
            android:hint="Confirmați parola"
            android:padding="12dp" />

    </LinearLayout>

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ll1"
        android:visibility="gone"

        android:layout_above="@+id/signUpBtn"/>


    <Button
        android:id="@+id/signUpBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/loginTV"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="32dp"
        android:layout_marginEnd="32dp"
        android:layout_marginRight="32dp"
        android:layout_marginBottom="18dp"
        android:background="@drawable/btn_bg"
        android:fontFamily="@font/comfortaa"
        android:text="@string/creati_cont"
        android:textColor="@color/black"
        app:backgroundTint="@color/purple_200" />

    <TextView
        android:id="@+id/loginTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="26dp"
        android:fontFamily="@font/comfortaa"
        android:text="Înapoi spre autentificare"
        android:textColor="@color/purple_200"
        android:textStyle="bold" />





    <!-- TODO: Update blank fragment layout -->

</RelativeLayout>